{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "types": [
      "cypress",
      "node"
    ],
    "jsx": "react-jsx"
  },
  "include": [
    "src", 
    "**/*.ts"
, "cypress/e2e/bookish.spec.cy.js"  ],
  "typeAcquisition": {
    "include": [
      "jest"
    ]
  }
}